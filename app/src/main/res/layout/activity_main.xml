<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ChBej"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topPanelBg"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/Bej"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Левая иконка -->
    <ImageView
        android:id="@+id/ivLeft"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_sportic"
        app:layout_constraintTop_toTopOf="@id/topPanelBg"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Пилюля с текстом "СПОРТИК" -->
    <TextView
        android:id="@+id/tvSportik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/russo_one_regular"
        android:includeFontPadding="false"
        android:background="@drawable/top_pill_bg"
        app:layout_constraintTop_toTopOf="@id/topPanelBg"
        app:layout_constraintBottom_toBottomOf="@id/topPanelBg"
        app:layout_constraintStart_toEndOf="@id/ivLeft"
        app:layout_constraintEnd_toStartOf="@+id/ivRight"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <!-- Правая иконка -->
    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="346dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_barcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/topPanelBg"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/ChBej" />

    <!-- Фото-блок (пока простой) -->
    <FrameLayout
        android:id="@+id/photoBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topPanelBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/back_photo" />
    </FrameLayout>

    <!-- Иконки под фото (левая/правая) -->
    <ImageView
        android:id="@+id/ivFeedback"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:tint="@color/white"
        android:src="@drawable/ic_feedback"
        app:layout_constraintTop_toBottomOf="@id/photoBlock"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        app:tint="@color/white"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toBottomOf="@id/photoBlock"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ряд из двух кнопок (обратная связь / профиль) -->
    <LinearLayout
        android:id="@+id/rowButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivFeedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/btnFeedback"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/feedback"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/btn_brown_selector"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/btn_brown_selector"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Центральный значок-расписание -->
    <ImageView
        android:id="@+id/ivSchedule"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_schedule"
        app:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/rowButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Кнопка "Расписание" -->
    <TextView
        android:id="@+id/btnSchedule"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/schedule"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/btn_brown_selector"
        app:layout_constraintTop_toBottomOf="@id/ivSchedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>